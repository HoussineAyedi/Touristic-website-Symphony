
{% extends 'base.html.twig' %}



{% block title 'Gerer les destiantions' %}
{% block body %}


    <div class="jumbotron text-center">
        <h1> Agence Tour DSI22 Espace de gestion des destinations </h1>
    </div>

   {% for message in app.flashes('success')%}


    <div class="alert alert-success text-center">
        {{ message }}
    </div>
    {% endfor %}

<table class="table table-striped">
<thead>
    <tr>
        <th> Code Destination </th>
        <th> Nom de la Destination </th>
        <th> Image </th>

        <th> Actions </th>
    </tr>
</thead>
    <tbody>
    {%for dest in dests %}
    <tr>
        <td>{{ dest.getCodeDest() }}</td>
        <td>{{ dest.getDestTest() }}</td>
        <td><img src="images/destinations/{{ dest.getFilename()  }} " width="100" height="100" alt=""> </td>
        <td>
            <a href="{{ path('admin.destination.edit',{id: dest.id}) }}" class="btn btn-secondary">Editer</a>
            <form action="{{ path('admin.destination.delete',{id: dest.id}) }}" style="display: inline-block" onsubmit="return confirm('Etes vous sur')" >
                <input type="hidden" name="_method" value="DELETE ">
                <button class="btn btn-danger">Supprimer </button>
            </form>
        </td>
    </tr>
    {% endfor %}








    <tr>
        <td> </td>
        <td> </td>
        <td>
            <div class="text-right">
                <a href=" {{ path('admin.destination.new') }}" class="btn btn-primary"> Ajouter une autre destination </a>
            </div>
        </td>
        <td> </td>
    </tr>

    </tbody>

</table>



    {% block content %}{% endblock %}



{% endblock %}